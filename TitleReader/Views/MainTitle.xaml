<Page x:Class="TitleReader.Views.MainTitle" mc:Ignorable="d" 
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      
      xmlns:local="clr-namespace:TitleReader.Views"
      xmlns:vm="clr-namespace:TitleReader.ViewModels"
      xmlns:models="clr-namespace:TitleReader.Models"
      xmlns:conv="clr-namespace:TitleReader.Infrastuctures.Convertors"
      
      DataContext="{Binding TitleModel, Source={StaticResource Locator}}"
      d:DesignWidth="800"
      ShowsNavigationUI="False" KeepAlive="True" Title="Title">
    
    <Grid>
        <Grid.Resources>
            <Style x:Key="ContentPanel" TargetType="Border">
                <Setter Property="Margin" Value="0,0,0,8"/>
                <Setter Property="CornerRadius" Value="2"/>
                <Setter Property="Background" Value="#eeeeee"/>
            </Style>

            <Style x:Key="TextBlockPropertyName" TargetType="TextBlock">

                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Margin" Value="0,0,5,0"/>
            </Style>

            <Style x:Key="TextBlockPropertyValue" TargetType="TextBlock"
                  >
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
            </Style>

            <Style x:Key="TextBlockTitleName" TargetType="TextBlock" BasedOn="{StaticResource TextBlockPropertyName}">
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
            </Style>

            <Style TargetType="WrapPanel" x:Key="WrapPanelRowTitleProperties">
                <Setter Property="Orientation" Value="Horizontal"/>
                <Setter Property="Margin" Value="0,0,0,5"/>
            </Style>

            <Style TargetType="Expander" BasedOn="{StaticResource ExpanderRight}">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Description}" Value="{x:Null}">
                        <Setter Property="Visibility" Value="Collapsed"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>

            <conv:ChapterNameFormatToListBox x:Key="ChaptersFormatConv"/>
            <conv:ListToString x:Key="ListToString"/>
        </Grid.Resources>

        <ScrollViewer Visibility="Visible" ScrollViewer.VerticalScrollBarVisibility="Hidden">
            <StackPanel Margin="10" MaxWidth="1000">
                <Border Style="{StaticResource ContentPanel}" >

                    <DockPanel Margin="5,2">
                        <Image DockPanel.Dock="Left" Source="/Resources/Images/icon.png" Height="50" MouseDown="Image_MouseDown" Cursor="Hand"/>
                        <Grid></Grid>
                    </DockPanel>
                </Border>
                
                <Border Style="{StaticResource ContentPanel}">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <StackPanel VerticalAlignment="Top" Width="200" Margin="0,0,10,0">
                            <Border BorderBrush="#505050" BorderThickness="0.3"
                                Margin="0,0,0,0">
                                <Image Source="{Binding Cover}"  VerticalAlignment="Top"
                               Margin="1"/>
                            </Border>
                            <Button Content="Начать читать" Padding="10,5" Margin="0,5"
                                    Command="{Binding FirstChapterCommand}" Click="Button_Click"/>
                        </StackPanel>
                        <StackPanel  Orientation="Vertical" Grid.Column="1"  DataContext="{Binding Title}">
                            <StackPanel Orientation="Vertical" Margin="0,0 0 5">
                                <TextBlock Text="{Binding Name}" Style="{StaticResource TextBlockTitleName}"/>
                                <TextBlock Text="{Binding AlterName}" Style="{StaticResource TextBlockPropertyValue}"/>
                            </StackPanel>

                            <WrapPanel>
                                <WrapPanel.Style>
                                    <Style TargetType="WrapPanel" BasedOn="{StaticResource WrapPanelRowTitleProperties}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Names}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </WrapPanel.Style>
                                <TextBlock Text="Тип" Style="{StaticResource TextBlockPropertyName}"/>
                                <TextBlock Text="{Binding Names}" Style="{StaticResource TextBlockPropertyValue}"/>
                            </WrapPanel>

                            <WrapPanel>
                                <WrapPanel.Style>
                                    <Style TargetType="WrapPanel" BasedOn="{StaticResource WrapPanelRowTitleProperties}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Authors.Count}" Value="0">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Authors}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </WrapPanel.Style>
                                <TextBlock Text="Автор" Style="{StaticResource TextBlockPropertyName}"/>
                                <TextBlock Text="{Binding Authors, Converter={StaticResource ListToString}}" Style="{StaticResource TextBlockPropertyValue}"/>
                            </WrapPanel>

                            <WrapPanel>
                                <WrapPanel.Style>
                                    <Style TargetType="WrapPanel" BasedOn="{StaticResource WrapPanelRowTitleProperties}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Status}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </WrapPanel.Style>
                                <TextBlock Text="Статус тайтла" Style="{StaticResource TextBlockPropertyName}"/>
                                <TextBlock Text="{Binding Status}" Style="{StaticResource TextBlockPropertyValue}"/>
                            </WrapPanel>

                            <WrapPanel>
                                <WrapPanel.Style>
                                    <Style TargetType="WrapPanel" BasedOn="{StaticResource WrapPanelRowTitleProperties}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding StatusTranslate}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </WrapPanel.Style>
                                <TextBlock Text="Статус перевода" Style="{StaticResource TextBlockPropertyName}"/>
                                <TextBlock Text="{Binding StatusTranslate}" Style="{StaticResource TextBlockPropertyValue}"/>
                            </WrapPanel>

                            <WrapPanel>
                                <WrapPanel.Style>
                                    <Style TargetType="WrapPanel" BasedOn="{StaticResource WrapPanelRowTitleProperties}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding DateOfRelease}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </WrapPanel.Style>
                                <TextBlock Text="Дата релиза" Style="{StaticResource TextBlockPropertyName}"/>
                                <TextBlock Text="{Binding DateOfRelease}" Style="{StaticResource TextBlockPropertyValue}"/>
                            </WrapPanel>

                            <WrapPanel>
                                <WrapPanel.Style>
                                    <Style TargetType="WrapPanel" BasedOn="{StaticResource WrapPanelRowTitleProperties}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Chapters}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </WrapPanel.Style>
                                <TextBlock Text="Загружено глав" Style="{StaticResource TextBlockPropertyName}" 
                                           ToolTip="Учитываются экстра главы и пролог"/>
                                <TextBlock Text="{Binding Chapters.Count}" Style="{StaticResource TextBlockPropertyValue}"/>
                            </WrapPanel>

                            <WrapPanel>
                                <WrapPanel.Style>
                                    <Style TargetType="WrapPanel" BasedOn="{StaticResource WrapPanelRowTitleProperties}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Genres}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Genres.Count}" Value="0">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </WrapPanel.Style>
                                <TextBlock Text="Жанры" Style="{StaticResource TextBlockPropertyName}"/>
                                <TextBlock Text="{Binding Genres, Converter={StaticResource ListToString}}" Style="{StaticResource TextBlockPropertyValue}"/>
                            </WrapPanel>

                            <Expander Margin="0 0,0,5">
                                <Expander.Header>
                                    <TextBlock Text="Описание" Style="{StaticResource TextBlockPropertyName}" Margin="0" />
                                </Expander.Header>

                                <WrapPanel Orientation="Vertical">
                                    <TextBlock Text="{Binding Description}" TextWrapping="Wrap"
                                Style="{StaticResource TextBlockPropertyValue}"/>
                                </WrapPanel>
                            </Expander>

                        </StackPanel>
                    </Grid>
                </Border>

                <Border Style="{StaticResource ContentPanel}">
                    <Grid>
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Style.Triggers >
                                    <DataTrigger Binding="{Binding Title}" Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                        </Grid.RowDefinitions>
                        <DockPanel>
                            <Button DockPanel.Dock="Right" 
                                    Padding="20,0" Margin="8"
                                    Content="Открыть"
                                    Command="{Binding GetSelectChapterContentCommand}" 
                                    Click="Button_Click"/>
                            
                            <TextBlock Grid.Row="0" Text="Список глав" Margin="10"
                                   Style="{StaticResource TextBlockPropertyName}"/>
                           
                        </DockPanel>
                        <Border Grid.Row="1" BorderThickness="0, 0.3" BorderBrush="#606060">
                            <Border.Resources>
                                <Style TargetType="Hyperlink">
                                    <Setter Property="Command" Value="{Binding GetSelectChapterContentCommand}"/>
                                </Style>
                            </Border.Resources>
                            
                            <Grid>
                                <TextBlock Text="Нет глав!" TextAlignment="Center"
                                       Style="{StaticResource TextBlockPropertyValue}"
                                       Margin="0,20" FontSize="16"
                                       Visibility="{Binding Visibility,ElementName=ListChapters, Converter={conv:ConvertPropertyVisibility Base=Collapsed}}"/>

                                <ListBox x:Name="ListChapters" Margin="1"
                                         BorderThickness="0" MaxHeight="500" 
                                         HorizontalContentAlignment="Stretch"
                                         ItemsSource="{Binding Title.Chapters, UpdateSourceTrigger=PropertyChanged}"
                                         SelectedItem="{Binding SelectChapter}"
                                         VirtualizingPanel.IsVirtualizing="True"
                                         VirtualizingPanel.VirtualizationMode="Recycling"
                                         VirtualizingPanel.IsContainerVirtualizable="True">
                                    <ListBox.Style >
                                        <Style TargetType="ListBox">
                                            <Style.Triggers>
                                                <Trigger Property="ItemsSource" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ListBox.Style>
                                    <ListBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <VirtualizingStackPanel />
                                        </ItemsPanelTemplate>
                                    </ListBox.ItemsPanel>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate DataType="{x:Type models:Chapter}">
                                            <Grid>
                                                <ContentControl Panel.ZIndex="1" Cursor="Hand"
                                                            DataContext="{Binding DataContext,RelativeSource={RelativeSource AncestorType=Page}}"
                                                            MouseDoubleClick="Border_MouseDown">
                                                    <i:Interaction.Triggers>
                                                        <i:EventTrigger EventName="MouseDoubleClick">
                                                            <i:InvokeCommandAction Command="{Binding GetSelectChapterContentCommand}"/>
                                                        </i:EventTrigger>
                                                    </i:Interaction.Triggers>
                                                    <Border Opacity="0.1" Background="White"/>
                                                </ContentControl>

                                                <Border>
                                                    <Grid Margin="5">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition/>
                                                            <ColumnDefinition Width="auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <StackPanel Grid.Column="0" Orientation="Horizontal">

                                                            <TextBlock Text="{Binding Number}" FontWeight="Bold"/>
                                                            <TextBlock Text="{Binding Name, Converter={StaticResource ChaptersFormatConv}}"/>

                                                        </StackPanel>


                                                        <TextBlock Grid.Column="1" Text="{Binding Date}" Margin="0,0,10,0"/>
                                                    </Grid>
                                                </Border>
                                            </Grid>
                                            
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>

                            </Grid>
                        </Border>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>